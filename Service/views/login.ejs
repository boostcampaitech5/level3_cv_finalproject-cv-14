<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" type="image/x-icon" href="assets/ficon.png" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Memory Studio Login</title>
    <link href="css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  </head>

  <body class="bg-primary">
    <div id="layoutAuthentication">
      <div id="layoutAuthentication_content">
        <main>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                  <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                  </div>
                  <div class="card-body">
                    <form action="/login" method="post" id="login-form">
                      <div class="form-floating mb-3">
                        <input class="form-control" id="inputEmail" name="email" type="email" placeholder="name@example.com" />
                        <label for="inputEmail">Email address</label>
                        <span class="error-message" id="email-error"></span>
                      </div>
                      <div class="form-floating mb-3">
                        <input class="form-control" id="inputPassword" name="password" type="password" placeholder="Password" />
                        <label for="inputPassword">Password</label>
                        <span class="error-message" id="password-error"></span>
                      </div>
                      <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <button class="btn btn-primary btn-block mt-3" type="submit" id="login-btn">Login</button>
                      </div>
                    </form>
                  </div>
                  <div class="card-footer text-center py-3">
                    <div class="list-group"><a href="register">Need an account? Sign up!</a></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script>
      // 로그인 post로 받을 때 passport.authenticate로 인증을 처리하기 때문에
      // form input 속성 name, id 바꾸면 안됨!

      // 폼 서버로 제출 전 유효성 검사를 수행하는 함수
      function validateLoginForm(event) {
        const emailInput = document.getElementById("inputEmail");
        const passwordInput = document.getElementById("inputPassword");
        const emailError = document.getElementById("email-error");
        const passwordError = document.getElementById("password-error");

        emailError.innerText = "";
        passwordError.innerText = "";

        if (!emailInput.value) {
          emailError.innerText = "이메일을 입력해주세요.";
          event.preventDefault(); // 폼 제출을 막음
          return;
        }

        if (!passwordInput.value) {
          passwordError.innerText = "비밀번호를 입력해주세요.";
          event.preventDefault(); // 폼 제출을 막음
          return;
        }

        // 폼 서버로 제출
        document.getElementById("login-form").submit();
      }

      // "Login" 버튼 클릭 이벤트 리스너 등록
      document.getElementById("login-btn").addEventListener("click", validateLoginForm);
    </script>
  </body>
</html>
